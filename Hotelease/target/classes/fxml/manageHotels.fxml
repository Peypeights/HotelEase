<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.group7.hotelease.Controllers.ManageHotelsController">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2a2a2a; -fx-padding: 20;">
            <Button text="â† Back" onAction="#goBack"
                    style="-fx-background-color: #3a3a3a; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 6; -fx-padding: 10 20; -fx-cursor: hand;"/>
            <Label text="Manage Hotels" textFill="#ffffff" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Press ESC to go back" textFill="#606060" style="-fx-font-size: 11px; -fx-font-style: italic;"/>
            <Button text="Logout" onAction="#logout"
                    style="-fx-background-color: #ff6b6b; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 6; -fx-padding: 10 20; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Center: stack so the FAB can overlay the scroll content -->
    <center>
        <StackPane>
            <ScrollPane fitToWidth="true" style="-fx-background: #1a1a1a; -fx-background-color: #1a1a1a;">
                <VBox>
                    <padding>
                        <Insets top="30" right="40" bottom="90" left="40"/> <!-- add bottom padding so FAB doesn't overlap last row -->
                    </padding>
                    <GridPane fx:id="hotelGrid" hgap="30.0" vgap="30.0" alignment="CENTER"/>
                </VBox>
            </ScrollPane>

            <!-- Floating Add Button (FAB) - bottom right -->
            <Button fx:id="addFab" text="+" onAction="#onAddHotel"
                    StackPane.alignment="BOTTOM_RIGHT" style="
                        -fx-background-color: #4a9eff;
                        -fx-text-fill: white;
                        -fx-font-size: 28px;
                        -fx-font-weight: bold;
                        -fx-background-radius: 999;
                        -fx-pref-width: 64px;
                        -fx-pref-height: 64px;
                        -fx-cursor: hand;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 10, 0, 0, 4);
                        -fx-padding: 0;
                        -fx-translate-x: -28; -fx-translate-y: -28;" />
        </StackPane>
    </center>
</BorderPane>