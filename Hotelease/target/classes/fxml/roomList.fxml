<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.group7.hotelease.Controllers.RoomListController">
    
    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2a2a2a; -fx-padding: 20;">
            <Button text="â† Back" onAction="#goBack" 
                style="-fx-background-color: #3a3a3a; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 6; -fx-padding: 10 20; -fx-cursor: hand;"/>
            <Label text="Available Rooms" textFill="#ffffff" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Press ESC to go back" textFill="#606060" style="-fx-font-size: 11px; -fx-font-style: italic;"/>
        </HBox>
    </top>
    
    <!-- Center Content - ScrollPane for room list -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #1a1a1a; -fx-background-color: #1a1a1a;">
            <VBox fx:id="roomListContainer" spacing="20.0" style="-fx-background-color: #1a1a1a;">
                <padding>
                    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
                </padding>
                
                <!-- Sample Room Card (Template - will be generated dynamically) -->
                <HBox spacing="20.0" alignment="CENTER_LEFT" 
                    style="-fx-background-color: #2a2a2a; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 3);">
                    
                    <VBox spacing="8.0">
                        <Label text="Room 101" textFill="#ffffff" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Label text="Deluxe Suite" textFill="#b0b0b0" style="-fx-font-size: 14px;"/>
                        <HBox spacing="15.0" alignment="CENTER_LEFT">
                            <Label text="Status:" textFill="#808080" style="-fx-font-size: 12px;"/>
                            <Label text="Available" textFill="#4ade80" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                        </HBox>
                    </VBox>
                    
                    <Region HBox.hgrow="ALWAYS"/>
                    
                    <VBox spacing="8.0" alignment="CENTER_RIGHT">
                        <Label text="150.00php" textFill="#ffffff" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                        <Label text="per night" textFill="#808080" style="-fx-font-size: 11px;"/>
                    </VBox>
                    
                    <Button text="Book Now" prefWidth="120" prefHeight="40"
                        style="-fx-background-color: #4a9eff; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>