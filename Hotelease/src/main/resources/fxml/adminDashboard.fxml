<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.group7.hotelease.Controllers.AdminDashboardController">
    
    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2a2a2a; -fx-padding: 20;">
            <Label text="Admin Dashboard" textFill="#ffffff" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#logout" 
                style="-fx-background-color: #ff6b6b; -fx-text-fill: white; -fx-font-size: 12px; -fx-background-radius: 6; -fx-padding: 10 20; -fx-cursor: hand;"/>
        </HBox>
    </top>
    
    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="30.0">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
            </padding>
            
            <Label text="Management Options" textFill="#b0b0b0" style="-fx-font-size: 16px;"/>
            
            <GridPane hgap="30.0" vgap="30.0" alignment="CENTER">
                <!-- Manage Bookings Card -->
                <VBox alignment="CENTER" spacing="20.0" onMouseClicked="#manageBookings" GridPane.columnIndex="0" GridPane.rowIndex="0"
                    style="-fx-background-color: #2a2a2a; -fx-background-radius: 15; -fx-padding: 40; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);"
                    prefWidth="280" prefHeight="200">
                    <Label text="ðŸ“…" style="-fx-font-size: 48px;"/>
                    <Label text="Manage Bookings" textFill="#ffffff" style="-fx-font-size: 18px; -fx-font-weight: bold;" textAlignment="CENTER" wrapText="true"/>
                    <Label text="View and manage all bookings" textFill="#b0b0b0" style="-fx-font-size: 12px;" textAlignment="CENTER" wrapText="true"/>
                </VBox>
                
                <!-- Manage Rooms Card -->
                <VBox alignment="CENTER" spacing="20.0" onMouseClicked="#manageRooms" GridPane.columnIndex="1" GridPane.rowIndex="0"
                    style="-fx-background-color: #2a2a2a; -fx-background-radius: 15; -fx-padding: 40; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);"
                    prefWidth="280" prefHeight="200">
                    <Label text="ðŸ›ï¸" style="-fx-font-size: 48px;"/>
                    <Label text="Manage Rooms" textFill="#ffffff" style="-fx-font-size: 18px; -fx-font-weight: bold;" textAlignment="CENTER" wrapText="true"/>
                    <Label text="Add, edit, or remove rooms" textFill="#b0b0b0" style="-fx-font-size: 12px;" textAlignment="CENTER" wrapText="true"/>
                </VBox>
                
                <!-- Manage Hotels Card -->
                <VBox alignment="CENTER" spacing="20.0" onMouseClicked="#manageHotels" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"
                    style="-fx-background-color: #2a2a2a; -fx-background-radius: 15; -fx-padding: 40; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);"
                    prefWidth="590" prefHeight="200">
                    <Label text="ðŸ¨" style="-fx-font-size: 48px;"/>
                    <Label text="Manage Hotels" textFill="#ffffff" style="-fx-font-size: 18px; -fx-font-weight: bold;" textAlignment="CENTER" wrapText="true"/>
                    <Label text="Add, edit, or remove hotel properties" textFill="#b0b0b0" style="-fx-font-size: 12px;" textAlignment="CENTER" wrapText="true"/>
                </VBox>
            </GridPane>
            
            <Label text="Press ESC to go back" textFill="#606060" style="-fx-font-size: 11px; -fx-font-style: italic;"/>
        </VBox>
    </center>
</BorderPane>
