<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group7.hotelease.Controllers.LoginController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    
    <VBox alignment="CENTER" maxWidth="400" spacing="30.0" style="-fx-background-color: #2a2a2a; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
        </padding>
        
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="HotelEase" textFill="#ffffff" />
        
        <Label style="-fx-font-size: 14px;" text="Login to your account" textFill="#b0b0b0" />
        
        <VBox spacing="15.0">
            <Label style="-fx-font-size: 12px;" text="Username" textFill="#e0e0e0" />
            <TextField fx:id="usernameField" prefHeight="45" promptText="Enter username" style="-fx-background-color: #3a3a3a; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #808080; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12;" />
        </VBox>
        
        <VBox spacing="15.0">
            <Label style="-fx-font-size: 12px;" text="Password" textFill="#e0e0e0" />
            <PasswordField fx:id="passwordField" prefHeight="45" promptText="Enter password" style="-fx-background-color: #3a3a3a; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #808080; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12;" />
        </VBox>
        
        <Label fx:id="errorLabel" style="-fx-font-size: 12px;" textFill="#ff6b6b" wrapText="true" />
        
        <Button onAction="#handleLogin" prefHeight="45" prefWidth="320" style="-fx-background-color: #4a9eff; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Login" />
        
        <HBox alignment="CENTER" spacing="5.0">
            <Label style="-fx-font-size: 12px;" text="Don't have an account?" textFill="#b0b0b0" />
            <Button onAction="#goToRegistration" style="-fx-background-color: transparent; -fx-text-fill: #4a9eff; -fx-font-size: 12px; -fx-underline: true; -fx-cursor: hand;" text="Register here" />
        </HBox>
    </VBox>
</VBox>
