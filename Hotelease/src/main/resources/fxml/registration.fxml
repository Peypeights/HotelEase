<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #1a1a1a;" onKeyPressed="#handleKeyPress" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.group7.hotelease.Controllers.RegistrationController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>
    
    <VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: #2a2a2a; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);" maxWidth="400">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
        </padding>
        
        <Label text="Create Account" textFill="#ffffff" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
        
        <Label text="Register a new account" textFill="#b0b0b0" style="-fx-font-size: 14px;"/>
        
        <VBox spacing="15.0">
            <Label text="Username" textFill="#e0e0e0" style="-fx-font-size: 12px;"/>
            <TextField fx:id="usernameField" promptText="Choose a username" 
                style="-fx-background-color: #3a3a3a; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #808080; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12;"
                prefHeight="45"/>
        </VBox>
        
        <VBox spacing="15.0">
            <Label text="Password" textFill="#e0e0e0" style="-fx-font-size: 12px;"/>
            <PasswordField fx:id="passwordField" promptText="Create a password"
                style="-fx-background-color: #3a3a3a; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #808080; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12;"
                prefHeight="45"/>
        </VBox>
        
        <VBox spacing="15.0">
            <Label text="Confirm Password" textFill="#e0e0e0" style="-fx-font-size: 12px;"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password"
                style="-fx-background-color: #3a3a3a; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #808080; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 12;"
                prefHeight="45"/>
        </VBox>
        
        <VBox spacing="15.0">
            <Label text="Account Type" textFill="#e0e0e0" style="-fx-font-size: 12px;"/>
            <ComboBox fx:id="accountTypeCombo" prefWidth="320" prefHeight="45"
                style="-fx-background-color: #3a3a3a; -fx-background-radius: 8; -fx-border-radius: 8;"/>
        </VBox>
        
        <Label fx:id="errorLabel" textFill="#ff6b6b" style="-fx-font-size: 12px;" wrapText="true"/>
        
        <Button text="Register" onAction="#handleRegister" prefWidth="320" prefHeight="45"
            style="-fx-background-color: #4a9eff; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
        
        <Button text="â† Back to Login" onAction="#backToLogin" 
            style="-fx-background-color: transparent; -fx-text-fill: #4a9eff; -fx-font-size: 12px; -fx-cursor: hand;"/>
    </VBox>
</VBox>